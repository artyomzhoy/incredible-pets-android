<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white_translucent_50">

    <item
        android:id="@android:id/mask"
        android:height="@dimen/update_image_button_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_translucent_54"/>
            <corners
                android:bottomRightRadius="@dimen/update_image_button_corner_radius"
                android:bottomLeftRadius="@dimen/update_image_button_corner_radius"
                android:topLeftRadius="@dimen/update_image_button_corner_radius"
                android:topRightRadius="@dimen/update_image_button_corner_radius"/>
        </shape>
    </item>
    <item
        android:height="@dimen/update_image_button_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary"/>
            <corners
                android:bottomRightRadius="@dimen/update_image_button_corner_radius"
                android:bottomLeftRadius="@dimen/update_image_button_corner_radius"
                android:topLeftRadius="@dimen/update_image_button_corner_radius"
                android:topRightRadius="@dimen/update_image_button_corner_radius"/>
        </shape>
    </item>
</ripple>