<resources>

    <attr name="colorProgress" format="color"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>

        <item name="android:colorBackground">@color/screen_background</item>
        <item name="android:statusBarColor">@color/black_translucent_10</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/Text.BottomNavigation</item>
        <item name="itemTextAppearanceInactive">@style/Text.BottomNavigation</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppToolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?android:textColorPrimaryInverse</item>
        <item name="subtitleTextColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AppProgressBar">
        <item name="android:indeterminateTint">?attr/colorSecondary</item>
    </style>

    <style name="RoundedButton">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/big_margin</item>
        <item name="android:paddingEnd">@dimen/big_margin</item>
        <item name="android:background">@drawable/bg_update_image_button</item>
        <item name="backgroundTint">@color/button_background_selector</item>
    </style>

</resources>
