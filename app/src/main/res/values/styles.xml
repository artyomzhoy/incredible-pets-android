<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:colorBackground">@color/screen_background</item>
        <item name="android:statusBarColor">@color/black_translucent_10</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/Text.BottomNavigation</item>
        <item name="itemTextAppearanceInactive">@style/Text.BottomNavigation</item>
    </style>
</resources>
